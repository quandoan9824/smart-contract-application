{
  "openapi": "3.0.1",
  "info": {
    "title": "GO Rest Example API Service (Purchase Order Tracker)",
    "description": "A sample service to demonstrate how to develop REST API in golang",
    "contact": {
      "name": "Ramesh Sunkara"
    },
    "version": "1.0"
  },
  "servers": [
    {
      "url": "//localhost:8080/api/v1"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": [
          "Status"
        ],
        "summary": "Status/Health of the service (Doesn't work in Swagger UI)",
        "description": "Provides the current status/health of the service. It checks the health of all the critical components of the service.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "503": {
            "description": "Something is wrong",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/orders/": {
      "get": {
        "tags": [
          "Fetch"
        ],
        "summary": "Fetch all orders",
        "description": "Fetches all orders",
        "responses": {
          "200": {
            "description": "",
            "content": {}
          }
        }
      },
      "post": {
        "tags": [
          "Fetch"
        ],
        "summary": "Creates or Updates an order",
        "description": "Used to either create or update an order",
        "responses": {
          "200": {
            "description": "",
            "content": {}
          }
        }
      }
    },
    "/orders/{id}": {
      "get": {
        "tags": [
          "Fetch"
        ],
        "summary": "Fetch single Order document identified by give id",
        "description": "Fetch single Order document identified by give id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Order ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {}
          },
          "500": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Fetch"
        ],
        "summary": "Delete single Order document identified by give id",
        "description": "Delete single Order document identified by give id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Order ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {}
          },
          "500": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}